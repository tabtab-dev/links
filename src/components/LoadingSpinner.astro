---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  text?: string;
}

const { size = 'md', text = '加载中...' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex flex-col items-center justify-center py-12">
  <div class="relative">
    <!-- 外圈 -->
    <div class={`${sizeClasses[size]} animate-spin rounded-full border-2 border-gray-200 border-t-blue-500`}></div>
    <!-- 内圈 -->
    <div class={`${sizeClasses[size]} absolute top-0 left-0 animate-spin rounded-full border-2 border-transparent border-t-purple-500`} style="animation-direction: reverse; animation-duration: 1.5s;"></div>
  </div>
  {text && <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">{text}</p>}
</div>