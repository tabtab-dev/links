---
import Layout from '../../layouts/Layout.astro';
import LinkCard from '../../components/LinkCard.astro';
import { getCollection } from 'astro:content';

// 获取当前分类参数
export async function getStaticPaths() {
  const links = await getCollection('links');
  const categories = [...new Set(links.map(link => link.data.category))];
  
  return categories.map(category => ({
    params: { category: category.toLowerCase() },
    props: { category }
  }));
}

const { category } = Astro.props;

// 获取所有链接并筛选当前分类
const allLinks = await getCollection('links');
const categoryLinks = allLinks
  .filter(link => link.data.category === category)
  .sort((a, b) => a.data.title.localeCompare(b.data.title));

// 获取所有分类用于面包屑
const categories = [...new Set(allLinks.map(link => link.data.category))];

// 获取其他分类链接
const otherCategories = categories.filter(cat => cat !== category);
---

<Layout title={`${category} - TabLinks`} description={`${category} 分类下的精选链接集合`}>
  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .animate-fadeIn {
      animation: fadeIn 0.6s ease-out forwards;
      opacity: 0;
    }
    
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
  <div class="max-w-7xl mx-auto">
    <!-- 面包屑导航 -->
    <nav class="flex items-center space-x-2 text-sm mb-8">
      <a href="/" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
        首页
      </a>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-gray-700 dark:text-gray-300 font-medium">{category}</span>
    </nav>

    <!-- 页面标题 -->
    <div class="text-center mb-12">
      <div class="mb-4">
        <div class="w-16 h-16 mx-auto bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 rounded-2xl flex items-center justify-center shadow-2xl">
          <span class="text-2xl text-white font-bold">{category.charAt(0).toUpperCase()}</span>
        </div>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{category}</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">{categoryLinks.length} 个精选链接</p>
    </div>

    <!-- 分类统计 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <!-- 当前分类统计 -->
      <div class="group relative bg-gradient-to-br from-blue-500 via-blue-600 to-blue-700 rounded-2xl p-6 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-500 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-3xl transform translate-x-16 -translate-y-16"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
              </div>
              <div class="ml-4">
                <div class="text-4xl font-bold">{categoryLinks.length}</div>
                <div class="text-blue-100 text-sm font-medium">{category} 链接</div>
              </div>
            </div>
          </div>
          <div class="mt-4 text-xs text-blue-100/80">
            占比 <span class="font-bold">{Math.round((categoryLinks.length / allLinks.length) * 100)}%</span> 的总链接
          </div>
        </div>
      </div>

      <!-- 标签统计 -->
      <div class="group relative bg-gradient-to-br from-green-500 via-green-600 to-green-700 rounded-2xl p-6 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-500 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-3xl transform translate-x-16 -translate-y-16"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                </svg>
              </div>
              <div class="ml-4">
                <div class="text-4xl font-bold">{categoryLinks.reduce((sum, link) => sum + (link.data.tags?.length || 0), 0)}</div>
                <div class="text-green-100 text-sm font-medium">总标签数</div>
              </div>
            </div>
          </div>
          <div class="mt-4 text-xs text-green-100/80">
            平均 <span class="font-bold">{Math.round(categoryLinks.reduce((sum, link) => sum + (link.data.tags?.length || 0), 0) / categoryLinks.length || 0)}</span> 个标签/链接
          </div>
        </div>
      </div>

      <!-- 分类占比 -->
      <div class="group relative bg-gradient-to-br from-amber-500 via-amber-600 to-amber-700 rounded-2xl p-6 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-500 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-3xl transform translate-x-16 -translate-y-16"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <div class="ml-4">
                <div class="text-4xl font-bold">{Math.round((categoryLinks.length / allLinks.length) * 100)}%</div>
                <div class="text-amber-100 text-sm font-medium">分类占比</div>
              </div>
            </div>
          </div>
          <div class="mt-4 text-xs text-amber-100/80">
            占总链接的 <span class="font-bold">{Math.round((categoryLinks.length / allLinks.length) * 100)}%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 链接网格 -->
    <div class="mb-16">
      <!-- 链接列表头部 -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
            {category} 链接列表
          </h2>
          <p class="text-gray-600 dark:text-gray-400">
            精选的 {category} 相关资源，持续更新
          </p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2 bg-white dark:bg-gray-800 rounded-full px-4 py-2 shadow-sm">
            <span class="text-sm font-medium text-gray-600 dark:text-gray-400">总计</span>
            <span class="text-2xl font-bold text-gray-900 dark:text-white">{categoryLinks.length}</span>
          </div>
          <div class="w-3 h-3 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full animate-pulse"></div>
        </div>
      </div>
      
      {categoryLinks.length > 0 ? (
        <div>
          <!-- 排序和筛选工具栏 -->
          <div class="mb-6 flex items-center justify-between bg-white dark:bg-gray-800 rounded-2xl p-4 shadow-sm border border-gray-100 dark:border-gray-700">
            <div class="flex items-center space-x-4">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">排序方式:</span>
              <button class="px-3 py-1 text-sm bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-200 rounded-full">
                名称 A-Z
              </button>
              <button class="px-3 py-1 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
                最新添加
              </button>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              共 {categoryLinks.length} 个结果
            </div>
          </div>

          <!-- 链接网格 -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {categoryLinks.map((link, index) => (
              <div 
                class="animate-fadeIn"
                style={`animation-delay: ${index * 50}ms`}
              >
                <LinkCard link={link} />
              </div>
            ))}
          </div>
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="relative">
            <div class="w-24 h-24 mx-auto mb-6">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full opacity-20 animate-ping"></div>
              <div class="relative w-24 h-24 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-2xl">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">暂无链接</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-8 max-w-md mx-auto">
              该分类下还没有添加任何链接，快来成为第一个贡献者！
            </p>
            <div class="flex items-center justify-center space-x-4">
              <a href="/admin" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                添加链接
              </a>
              <a href="/" class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                返回首页
              </a>
            </div>
          </div>
        </div>
      )}
    </div>

    <!-- 其他分类 -->
    {otherCategories.length > 0 && (
      <div class="mb-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">探索更多分类</h2>
            <p class="text-gray-600 dark:text-gray-400">发现其他精彩分类</p>
          </div>
          <a href="/category" class="text-blue-600 hover:text-blue-700 font-medium flex items-center group">
            查看全部分类
            <svg class="w-5 h-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
          {otherCategories.map((cat, index) => {
            const catCount = allLinks.filter(link => link.data.category === cat).length;
            const colors = [
              'from-red-500 to-orange-500',
              'from-green-500 to-emerald-500',
              'from-blue-500 to-cyan-500',
              'from-purple-500 to-pink-500',
              'from-yellow-500 to-orange-500',
              'from-indigo-500 to-purple-500'
            ];
            const colorClass = colors[index % colors.length];
            
            return (
              <a 
                href={`/category/${cat.toLowerCase()}`}
                class="group relative overflow-hidden bg-white dark:bg-gray-800 rounded-xl p-4 border border-gray-200 dark:border-gray-700 hover:border-transparent transition-all duration-300 shadow-sm hover:shadow-xl transform hover:-translate-y-1"
              >
                <div class={`absolute inset-0 bg-gradient-to-br ${colorClass} opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
                
                <div class="relative text-center">
                  <div class={`w-12 h-12 mx-auto mb-3 bg-gradient-to-br ${colorClass} rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                    <span class="text-white font-bold text-lg">
                      {cat.charAt(0).toUpperCase()}
                    </span>
                  </div>
                  <h3 class="font-semibold text-gray-900 dark:text-white text-sm mb-1 group-hover:text-transparent bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text">
                    {cat}
                  </h3>
                  <p class="text-xs text-gray-500 dark:text-gray-400 font-medium">{catCount} 个链接</p>
                </div>
                
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    )}
  </div>
</Layout>